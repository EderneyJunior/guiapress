<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        <div class="card-body">
            <form action="/articles/save" method="post">
                <input class="form-control" type="text" name="title"
                    placeholder="Defina o titulo do artigo"><br>
                <textarea class="form-control" name="body" placeholder="Escreva o artigo" id="article"></textarea><br>
                <label>Categoria</label>
                <select name="category" class="form-control">
                    <% for(const category of categories){ %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <% } %>
                </select>
                <br>
                <button class="btn btn-success">Publicar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        plugins: 'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
    })

</script>